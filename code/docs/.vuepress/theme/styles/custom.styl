html, body, #app, .theme-container {
    // height: 100%;
    color #333
}

body {
    background: #f5f5f5;
}

.home {
    .hero {
        img {
            border-radius: 50%;
            transition: all 1s;

            &:hover {
                transform: rotate(360deg);
            }
        }
    }
}

.sidebar {
    .avatar {
        img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            transition: all 1s;

            &:hover {
                transform: rotate(360deg);
            }
        }
    }
}

.page {
    .pageContent {
        min-height: 500px;
        // height: calc(100vh - 4rem);
        background-size: 270px 360px;
        background-color: #ffffff;
        background-repeat: no-repeat;
        background-position: bottom right;
    }

    .page-edit {
        background-color: #ffffff;
    }
}
